<resources>
    <!--应用程序主题-->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
    </style>

    <!--细分割线-->
    <style name="line_thin">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!--标题容器的样式-->
    <style name="title_container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">#0097f4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--标题中间的文字-->
    <style name="title_middle_text">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--标题左侧图标-->
    <style name="title_left">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <!--标题右侧图标-->
    <style name="title_right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <!--动态-活动行的文字-->
    <style name="row_meeting_text">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--灰色设置小标题-->
    <style name="text_title_grey">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:background">@color/bg_grey</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--通用输入框,无背景-->
    <style name="common_et">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一分割线一一一一一一一一一一一一一一一一一 -->
    <style name="Line">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!--细分割线-->
    <style name="Line.Thin">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一字体和颜色一一一一一一一一一一一一一一一一一 -->
    <style name="Font" />

    <style name="Font.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font.Small.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Font.Middle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Font.Middle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Middle.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Font.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Font.Big.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Font.Big.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一Container_通用容器一一一一一一一一一一一一一一一一一 -->
    <style name="Container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Container.UnderLine">
        <item name="android:background">@drawable/under_line</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一EditText一一一一一一一一一一一一一一一一一 -->
    <style name="EditText" parent="Container.UnderLine">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一TextView一一一一一一一一一一一一一一一一一 -->
    <style name="TextView" parent="Font.Middle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.GreyTitle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:background">@color/bg_grey</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="TextView.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.Big.SingleLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Small.Grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextView.Input" parent="EditText">
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一Button一一一一一一一一一一一一一一一一一 -->
    <style name="Button" parent="Font.Middle.White">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/sel_common_bt_bg</item>
    </style>

    <!--横向全屏按钮-->
    <style name="Button.Full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!--蓝色边框按钮-->
    <style name="Button.BlueStroke" parent="Font.Middle.Blue">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#0097f4</item>
        <!--<item name="android:background">@drawable/shape_blue_rect</item>-->
    </style>

    <!-- 一一一一一一一一一一一一一一一一主窗体边距一一一一一一一一一一一一一一一一一 -->
    <style name="Margin">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一CheckBox和RadioButton一一一一一一一一一一一一一一一一一 -->
    <style name="CheckBox" parent="Font.Middle">
        <item name="android:button">@drawable/sel_common_checkbox</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CheckBoxOC" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_bg_oc</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一圆角标签页一一一一一一一一一一一一一一一一一 -->
    <style name="RadiusTab" parent="Font.Middle">
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/sel_radiustab_bg</item>
        <item name="android:textColor">@color/color_rb</item>
    </style>

    <style name="RadiusTab.LeftRadius">
        <item name="android:background">@drawable/sel_radius_left</item>
    </style>

    <style name="RadiusTab.RightRadius">
        <item name="android:background">@drawable/sel_radius_right</item>
    </style>

    <!-- 一一一一一一一一一一一一一一一一标题样式一一一一一一一一一一一一一一一一一 -->
    <style name="Title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="horizontal_slide" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>


    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="nornal_style" parent="android:Theme.NoTitleBar"></style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="devide_line_eee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">#eee</item>
    </style>
</resources>
