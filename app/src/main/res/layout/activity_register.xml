<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <LinearLayout
        android:id="@+id/ll_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@color/et_light_blue">

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入11位手机号码"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/bt_get_identyfy_code"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:background="@drawable/sel_common_bt_bg"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_identify_code"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@id/ll_phone_number"
        android:background="@color/et_light_blue"
        android:hint="输入手机短信收到的验证码"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@id/et_identify_code"
        android:background="@color/et_light_blue"
        android:hint="输入不少于6位数密码"
        android:inputType="textPassword"
        android:paddingLeft="15dp" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@id/et_password"
        android:layout_marginTop="30dp"
        android:background="@color/et_light_blue">

        <ImageView
            android:id="@+id/iv_back_to_login"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/arraw_back" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_common_bt_bg"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_login"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_login"
            android:text="点击注册即表示同意"
            android:textColor="#00568A"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_user_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#00568A"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>
