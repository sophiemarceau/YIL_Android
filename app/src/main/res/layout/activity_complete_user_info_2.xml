<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <!--标题-->
    <RelativeLayout
        android:id="@+id/tv_name"
        style="@style/title_container">

        <ImageView
            android:id="@+id/iv_title_left"
            android:background="@drawable/arraw_backbtn_white"
            style="@style/title_left"
            />

        <TextView
            android:text="上传头像"
            style="@style/title_middle_text"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_takephoto"
        android:src="@drawable/takephoto"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_name"
        android:layout_width="125dp"
        android:layout_height="125dp"/>

    <!--下一步按钮-->
    <Button
        android:id="@+id/bt_next"
        android:background="@drawable/sel_common_bt_bg"
        android:layout_margin="15dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="下一步"
        android:layout_below="@id/iv_takephoto"
        android:layout_width="fill_parent"
        android:layout_height="45dp"/>

    <TextView
        android:textColor="@color/text_grey"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@id/bt_next"
        android:text="完善基本资料并上传头像后,才能报名或者发起约会"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
