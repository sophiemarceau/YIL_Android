<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.softinc.view.Title
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:drawable_left="@drawable/arraw_backbtn_white"
        app:text_title_left="返回"
        app:text_title_middle="购买友币" />

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            style="@style/Font.Small.Grey"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="友币余额" />

        <TextView
            android:id="@+id/tv_coin"
            style="@style/Font.Middle.Blue"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="0" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/Container.UnderLine"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical">

        <TextView
            style="@style/Font.Small.Grey"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="充值金额" />

    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lv_goods" />


</LinearLayout>
