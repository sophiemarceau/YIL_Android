<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">


            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ib_setting"
                android:background="@drawable/set_icon"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <!--头像-->
            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tv_title"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/default_avatar"
                    app:border_color="#CCCCCC"
                    app:border_width="3dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:id="@+id/txtName"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtAge" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivSex"
                        android:src="@drawable/female_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStar" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:id="@+id/txtLevel"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/ib_more"
                    android:src="@drawable/mine_more"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/lv_cr"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp">

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="我的信用值（22）"
                android:id="@+id/btnJoin"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:layout_marginRight="0.5dp" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="如何获得信用值"
                android:id="@+id/btnCom"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:layout_marginLeft="0.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_checkin">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView1"
                android:src="@drawable/mine_icon1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="icon1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:id="@+id/textView1"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/arraw_right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_qr">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:src="@drawable/mine_icon2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="icon1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:src="@drawable/arraw_right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_create">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:src="@drawable/mine_icon3"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="icon1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我发起的活动"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:src="@drawable/arraw_right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_join">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:src="@drawable/mine_icon4"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="icon4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我参与的活动"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:src="@drawable/arraw_right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_level">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:src="@drawable/mine_icon6"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="icon1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="升级为会员"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView12"
                android:src="@drawable/arraw_right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
