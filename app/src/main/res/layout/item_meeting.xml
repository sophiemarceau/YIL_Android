<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#f2f2f2"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:background="@drawable/vbg"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="信用"
                    android:id="@+id/textView11"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/tv_xin_yong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/default_avatar"
                        app:border_color="#CCCCCC"
                        app:border_width="3dp" />

                </RelativeLayout>

                <!--发起者昵称,性别,年龄-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_nickname"
                        style="@style/row_meeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="如果唉 "
                        android:textColor="#808080"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="14sp"
                        android:layout_height="14sp"
                        android:id="@+id/iv_gender"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!--&lt;!&ndash;发起者昵称,性别,年龄&ndash;&gt;-->
                <!--<TextView-->
                <!--android:id="@+id/tv_comments"-->
                <!--style="@style/row_meeting_text"-->
                <!--android:text="妹子约么?" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TextView.Big.SingleLine"
                    android:text="标题"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_place"
                    style="@style/row_meeting_text"
                    android:layout_width="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="南京大排档"
                    android:textColor="#808080" />

                <!--活动时间-->
                <TextView
                    android:id="@+id/tv_time_and_money"
                    style="@style/row_meeting_text"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:text="2015年4月1日 15:08:16  我请客"
                    android:textColor="#808080" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <!--<LinearLayout-->
                    <!--android:id="@+id/ll_text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:padding="5dp">-->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等级:"
                            android:id="@+id/textView13"
                            style="@style/TextView.Small" />

                        <TextView
                            android:id="@+id/tv_level"
                            style="@style/TextView.Small"
                            android:gravity="center"
                            android:text="不限" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别:"
                            android:id="@+id/textView14"
                            android:layout_marginLeft="10dp"
                            style="@style/TextView.Small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_gender"
                            android:text="男" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_watch_count"
                        style="@style/TextView.Small"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_comment_count"
                        android:drawableLeft="@drawable/view_icon"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#CCCCCC" />

                    <!--<TextView-->
                    <!--android:id="@+id/tv_sign_up_count"-->
                    <!--style="@style/TextView.Small"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:drawableLeft="@android:drawable/ic_notification_clear_all"-->
                    <!--android:gravity="center"-->
                    <!--android:text="1" />-->

                    <TextView
                        android:id="@+id/tv_comment_count"
                        style="@style/TextView.Small"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/chat_icon"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#CCCCCC" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>