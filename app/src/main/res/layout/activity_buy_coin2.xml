<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.softinc.view.Title
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:drawable_left="@drawable/arraw_backbtn_white"
        app:text_title_left="返回"
        app:text_title_middle="购买友币" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="支付方式"
            android:id="@+id/textView16"
            style="@style/Font.Small.Grey"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#000000" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/lv_pay"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:src="@drawable/alipay_s"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/Font.Small.Grey"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="购买友币："
            android:id="@+id/tv_count"
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dc" />

        <TextView
            android:id="@+id/tv_coin"
            style="@style/Font.Small.Grey"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="支付金额："
            android:textColor="#000000"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dm" />
    </LinearLayout>

    <RelativeLayout
        style="@style/Container.UnderLine"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:layout_margin="30dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="确认支付"
            android:id="@+id/btn_buy"
            style="@style/Button" />

    </RelativeLayout>


</LinearLayout>
